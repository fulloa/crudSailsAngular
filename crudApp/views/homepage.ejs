<div class="container theme-showcase" role="main" ng-app="Users" ng-controller="userController" ng-cloak>
    <div class="page-header">
        <h1>Usuarios</h1>
    </div>

    <div class="row">
        <form name="userForm">
            <div class="col-md-4">
                <div class="form-group" show-errors>
                    <input name="email" required="" ng-model="newUser.email" type="email" class="form-control" placeholder="Correo Electronico" >
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group" show-errors>
                    <input  name="user" required="" ng-model="newUser.user"  type="text" class="form-control" placeholder="Nombre"  >
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group" show-errors >
                    <input name="pass" required="" ng-model="newUser.pass" type="password" class="form-control" placeholder="ContraseÃ±a" >
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group" show-errors >
                    <input name="name" required="" ng-model="newUser.name"  type="text" class="form-control" placeholder="Nombre"  >
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input ng-model="newUser.lastName" name="lastName" type="text" class="form-control" placeholder="Apellido" >
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <input uib-datepicker-popup name="birthdate" ng-model="newUser.birthdate" type="text" class="form-control" placeholder="Fecha Nacimiento" >
                </div>
            </div>
            <div class="col-md-4">
                <button ng-click="createUser(newUser)" type="button" class="btn btn-success" > Guardar </button>
            </div>
        </form>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table" id="userTable">
                <thead>
                    <tr>
                        <th></th>
                        <th>Usuario</th>
                        <th>Correo</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Fecha de Nacimiento</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="user in users">
                        <td> <img ng-src="{{user.image}}" width="30px" ng-click="showLoadImage(user)"> </td>
                        <td><input ng-model="user.user" type="text" required="required" title="Usuario" ng-blur="updateUser(user)" placeholder="Usuario"></td>
                        <td><input ng-model="user.email" type="text" required="required" title="Correo Electronico" ng-blur="updateUser(user)" placeholder="Correo Electronico"></td>
                        <td><input ng-model="user.name" type="text" required="required" title="Nombre" ng-blur="updateUser(user)" placeholder="Nombre"></td>
                        <td><input ng-model="user.lastName" type="text" required="required" title="Apellido" ng-blur="updateUser(user)" placeholder="Apellido"></td>
                        <td><input uib-datepicker-popup ng-model="user.birthdate" type="text" required="required" title="Fecha de nacimiento" ng-blur="updateUser(user)" placeholder="Fecha de nacimiento"></td>
                        <td><button ng-click="deleteUser(user)" type="button" class="btn btn-danger delete" > Eliminar </button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="modal fade" id="loadImageModal" tabindex="-1" role="dialog" aria-labelledby="filtersModal">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Imagen de perfil</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <img ng-src="">
                        </div>
                        <div class="col-sm-12">
                            <button type="file" name="file" ngf-select="upload($file, $invalidFiles)" accept="image/*" ngf-max-height="1000" ngf-max-size="1MB">Seleccionar Imagen !</button>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <!--                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>-->
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</div>



